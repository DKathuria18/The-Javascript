//explore switch statement and write a baseic program in the comments

 
let a = prompt("hey whats ypur age?")
a = Number.parseInt(a)

if(a<0){
    alert("This is an invalid age")
}

else if(a<9){
    alert("This is a invalid age");
}
else if(a<18 && a>=9){
    alert("you are a kid and you can think of driving");
}
else{
    alert("you can drive as you are above 18");
}
console.log("done")

//ternary operator
console.log("you can", (a<18? "not drive" : "drive"))
